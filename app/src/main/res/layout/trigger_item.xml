<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/trigger_item"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:clickable="true"
        android:focusable="true">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/trigger_style"
            android:padding="2dp"
            android:layout_margin="1dp"
            android:clickable="false"
            tools:ignore="UselessParent">

        <ImageView
                android:id="@+id/trigger_icon"
                android:layout_width="80dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:contentDescription="@string/icon_of_the_trigger"
                android:paddingTop="10dp"

                android:paddingBottom="10dp"
                app:srcCompat="@drawable/ic_location_black" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_weight="6"
                android:orientation="vertical">


            <TextView
                    android:id="@+id/trigger_name"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:text="Honey! I'm home. Hello, this message is very long and that's ok."
                    android:textAlignment="gravity"
                    android:textSize="18sp"
                    android:textStyle="normal"
                    tools:ignore="HardcodedText" />


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/trigger_description"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.35"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingBottom="2dp"
                        android:text="John Smith"
                        android:textAlignment="gravity"
                        android:textAllCaps="false"
                        android:textSize="12sp"
                        tools:ignore="HardcodedText" />


                <TextView
                        android:id="@+id/trigger_info"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="0.7"
                        android:gravity="end"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:text="Location: Home"
                        android:textAlignment="gravity"
                        android:textSize="12sp"
                        tools:ignore="HardcodedText" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>